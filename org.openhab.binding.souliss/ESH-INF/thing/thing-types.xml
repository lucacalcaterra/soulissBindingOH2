<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="souliss" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="gateway">
		<label>Souliss Gateway</label>
		<description>Represents a Souliss Gateway.</description>

		<config-description>
			<parameter name="GATEWAY_IP_ADDRESS" type="text" required="true">
				<label>IP or Host Name</label>
				<description>Will be resolved by discovery if auto configured
                </description>
			</parameter>
			<parameter name="GATEWAY_PORT_NUMBER" type="integer" required="true">
				<label>Gateway port</label>
				<description>Default is 230 UDP.
                </description>
				<default>230</default>
			</parameter>
			<parameter name="PREFERRED_LOCAL_PORT_NUMBER" type="integer" required="true">
				<label>Preferred local port number</label>
				<description>Default port is 0. It means that it is random.
                </description>
				<default>0</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="ID" type="text" required="false">
				<label>Bridge ID</label>
				<description>Sicuramente non servirà - The mac address in upper case letters without delimiter for Version 3+ bridges. Leave empty for Version 1/2 devices.
                This is used to check if the given IP corresponds to the right device. The gateway is set offline if the device
                does not respond with the correct Bride ID and a re-detection is started. Useful for DHCP environments where
                IPs may change over time, after power outage etc.
                </description>
				<advanced>true</advanced>
			</parameter>
			<parameter name="PING_INTERVAL" type="integer" min="1" max="300">
				<label>Ping interval</label>
				<description>Interval in seconds to check for device presence.
                </description>
				<default>30</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="SUBSCRIBTION_INTERVAL" type="integer" min="1" max="60">
				<label>Subscription interval</label>
				<description>Interval in minutes to check for device presence.
                </description>
				<default>2</default>
				<advanced>true</advanced>
			</parameter>

			<parameter name="CONFIG_USER_INDEX" type="integer" required="true">
				<label>User Index</label>
				<description>Generally the default value work good. It must is different from other user interfaces (ex: SoulissApp)
                </description>
				<default>70</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="CONFIG_NODE_INDEX" type="integer" required="true">
				<label>Node Index</label>
				<description>Generally the default value work good. It must is different from other user interfaces (ex: SoulissApp)
                </description>
				<default>120</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="t11">
		<supported-bridge-type-refs>
